<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ayarlar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textColor="#FFFFFF"
            android:background="@drawable/secondary_button_background"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Budget Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bütçe Ayarları"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Monthly Budget Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aylık Bütçe"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/monthlyBudgetEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="₺5,000"
                    android:inputType="numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Currency Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para Birimi"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/currencySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Notification Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bildirim Ayarları"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Budget Alert Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bütçe Uyarıları"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bütçe limitine yaklaştığınızda bildirim alın"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <Switch
                    android:id="@+id/budgetAlertSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- Daily Reminder Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Günlük Hatırlatıcı"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Günlük gider girişi için hatırlatma"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <Switch
                    android:id="@+id/dailyReminderSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </LinearLayout>

            <!-- App Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uygulama Ayarları"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Dark Mode Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karanlık Mod"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karanlık tema kullan"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <Switch
                    android:id="@+id/darkModeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/saveSettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ayarları Kaydet"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/primary_button_background"
                android:padding="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-medium"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout> 