<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_padding">

        <!-- Header with App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budgee"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/app_title_size"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoşgeldiniz"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/appTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Settings Button -->
        <LinearLayout
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Ayarlar"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Settings Icon"
                android:src="@drawable/ic_settings"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Budget Status Button -->
        <LinearLayout
            android:id="@+id/viewBudgetButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding"
            app:layout_constraintTop_toBottomOf="@id/settingsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Bütçe Durumu"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Budget Icon"
                android:src="@drawable/ic_budget"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Spending History Button -->
        <LinearLayout
            android:id="@+id/spendingHistoryButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding"
            app:layout_constraintTop_toBottomOf="@id/viewBudgetButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Harcama Geçmişi"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="History Icon"
                android:src="@drawable/ic_history"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Add Expense Button -->
        <LinearLayout
            android:id="@+id/addExpenseButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding"
            app:layout_constraintTop_toBottomOf="@id/spendingHistoryButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Hesap Hareketleri"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Add Expense Icon"
                android:src="@drawable/ic_add_expense"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Notifications Button -->
        <LinearLayout
            android:id="@+id/notificationsButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding"
            app:layout_constraintTop_toBottomOf="@id/addExpenseButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Bildirimler"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Notifications Icon"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView> 