<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:padding="@dimen/screen_padding">

    <!-- Header with App Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/header_margin_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budgee"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/app_title_size"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Menu Items Container -->
    <LinearLayout
        android:layout_width="191dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Settings Button -->
        <LinearLayout
            android:id="@+id/settingsButton"
            android:layout_width="160dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginBottom="@dimen/menu_item_margin"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Ayarlar"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Settings Icon"
                android:src="@drawable/ic_settings"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Budget Status Button -->

        <!-- Spending History Button -->

        <!-- Add Expense Button -->
        <LinearLayout
            android:id="@+id/viewBudgetButton"
            android:layout_width="160dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginBottom="@dimen/menu_item_margin"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Bütçe Durumu"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Budget Icon"
                android:src="@drawable/ic_budget"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spendingHistoryButton"
            android:layout_width="160dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginBottom="@dimen/menu_item_margin"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Harcama Geçmişi"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="History Icon"
                android:src="@drawable/ic_history"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addExpenseButton"
            android:layout_width="160dp"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginBottom="@dimen/menu_item_margin"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Hesap Hareketleri"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Add Expense Icon"
                android:src="@drawable/ic_add_expense"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Notifications Button -->
        <LinearLayout
            android:id="@+id/notificationsButton"
            android:layout_width="160dp"
            android:layout_height="@dimen/menu_item_height"
            android:background="@drawable/menu_item_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/menu_item_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Bildirimler"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/menu_text_size" />

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:contentDescription="Notifications Icon"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 