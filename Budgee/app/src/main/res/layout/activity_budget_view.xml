<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bütçe Görünümü"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="@drawable/button_background"
            android:contentDescription="Geri" />

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@drawable/button_background"
            android:contentDescription="Düzenle" />

    </LinearLayout>

    <!-- Budget Summary Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Total Budget Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Bütçe"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/totalBudgetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺5,000.00"
                    android:textColor="#4CAF50"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Spent Amount Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harcanan"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/spentAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺2,350.00"
                    android:textColor="#FF5722"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Remaining Amount Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalan"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/remainingAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺2,650.00"
                    android:textColor="#2196F3"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Category Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori Bazında İlerleme"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Food Progress -->
                <TextView
                    android:id="@+id/foodProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yemek: ₺1,200 / ₺1,500 (80%)"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:id="@+id/foodProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#444444"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="#4CAF50" />
                </LinearLayout>

                <!-- Transport Progress -->
                <TextView
                    android:id="@+id/transportProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ulaşım: ₺450 / ₺800 (56%)"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:id="@+id/transportProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#444444"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="56"
                        android:background="#FF9800" />
                </LinearLayout>

                <!-- Entertainment Progress -->
                <TextView
                    android:id="@+id/entertainmentProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eğlence: ₺800 / ₺1,000 (80%)"
                    android:textColor="#F44336"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:id="@+id/entertainmentProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#444444">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="#F44336" />
                </LinearLayout>

            </LinearLayout>

            <!-- Recent Expenses Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Son Giderler"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Expense List -->
            <LinearLayout
                android:id="@+id/expenseListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sample Expense Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Market Alışverişi"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gıda"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₺150.00"
                        android:textColor="#FF5722"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Another Sample Expense Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Benzin"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ulaşım"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₺200.00"
                        android:textColor="#FF5722"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout> 